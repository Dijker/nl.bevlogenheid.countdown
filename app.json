{
    "id": "nl.bevlogenheid.countdown",
    "name": {
        "en": "CountDown"
    },
    "version": "0.0.1",
    "compatibility": "0.x || 1.x",
    "description" : {
	"en" : "Use CountDown timers in your flows to start/stop actions",
        "nl" : "Gebruik CountDown timers om af te tellen naar een actie in een flow"
    },
    "author": {
        "name": "Ralf van Dooren",
        "email": "ralfvd@gmail.com"
    },
"images": {
    "large": "./assets/images/large.png",
    "small": "./assets/images/small.png"
  },
  "category": "tools",
  "dependencies": { },
  "flow": {
    "triggers": [
       {
	"id": "countdown_test",
 	"title": {
           "en": "Test"
	}	
       },
       {
	"id": "countdown_to_zero",
	"title": {
	   "en": "Timer reaches zero (0)"
	},
	"token": [
          {
	      "name": "variable",
	      "title": {
                 "en": "Variable"
              }
          }
        ], 
       "args": [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "Countdown timer name"
            }
          }
         ]
       }
       ],
       "conditions": [
       ],
       "actions": [
       {
	"id": "set_countdown_timer",
	"title": {
	   "en": "Start countdown timer"
        },
         "args": 
         [
          {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": {
              "en": "name"
            }
          },
          {
            "name": "value",
            "type": "text",
            "placeholder": 
	      {
              "en": "value"
            }
          }
	  ]
        },
        {
	 "id": "stop_countdown_timer",
        "title": 
          {
           "en": "Stop countdown timer"
          },
         "args": 
         [
           {
            "name": "variable",
            "type": "autocomplete",
            "placeholder": 
              {
              "en": "name"
              }
           }
         ]
        }
        ] 
   }
}
